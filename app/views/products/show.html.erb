<div class="d-flex justify-content-around">

  <%# thumbnail product images on left panel %>
  <div class="thumbnail-product d-flex flex-column">
    <ul  data-controller="imgselect">
     <li data-action="click->imgselect#updateMain" ><%= cl_image_tag @product.photo.key %></li>
     <li data-action="click->imgselect#updateMain" ><%= cl_image_tag @product.photo.key%></li> <%# supposed to be other images when we add more photos %>
     <li data-action="click->imgselect#updateMain" ><%= cl_image_tag @product.photo.key%></li>
     <li data-action="click->imgselect#updateMain" ><%= cl_image_tag @product.photo.key%></li>
     <li data-action="click->imgselect#updateMain" ><%= cl_image_tag @product.photo.key%></li>
    </ul>
  </div>

  <%# Main product image %>
  <div class="main-product">
      <%= cl_image_tag @product.photo.key%>
  </div>

  <%#  in-basket / sale/ price /tax details below %>
  <div class="detail-product">
      <p class="in-basket pdt-text">In 20+ baskets </p>
        <p class="sale pdt-text">Sale ends in 11 minutes</p>
           <h3>SGD<%=@product.price%></h3>
        <h4 class="product-taxes-text">Local taxes included (where applicable)</h4>
      <p class="pdt-text"><%=@product.name%> - <%=@product.description%></p>
      <%# reviews text below %>
     <p class="pdt-text font-weight-bold d-block"> Shop: <%=@product.user.username%> - TODO: add review stars </p>


    <div class="form-group">
          <%= simple_form_for(@product) do |f| %>
            <%# Select quantity drop down %>
              <%= f.input :quantity, collection: (1..@product.quantity) %>
                <%# Colour picker %>
                  <%= f.input :color, collection: ["Red", "Blue", "Yellow"] %>
              <%# Add to basket button %>
            <%= f.submit 'Add to Basket', class: "btn btn-dark rounded-5"%>
          <% end %>

      <%= link_to "Add to Basket", "#", class: "btn btn-dark rounded-5 d-block" %>
    </div>
  </div>
</div>

<div class="container">
  <div class="reviews-summary">
    <p class="pdt-text"> <%=@reviews%> Reviews for this item </p>

  </div>
</div>
